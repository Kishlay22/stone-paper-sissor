printf("STONE\n");
else
if(a==2)
printf("PAPER\n");
else
printf("SISSOR\n");
int b=rand()%3;
printf("\033[0;34m");
printf("computer choice::%d \n",b);
if(b==0)
printf("STONE\n");
else
if(b==1)
printf("PAPER\n");
else
printf("SISSOR\n");
//a==1
printf("\033[0;35m");
if(a==1&&b==1)
{printf("you loose    computer's point=+1\n");
countc++;}
else
{printf("\033[0;39m");
if(a==1&&b!=1)
{if(b==0)
printf("tie\n");
printf("\033[0;36m");
if(b==2)
{county++;
printf("\ayou win    your's point=+1\n");}}}
//a==2
if(a==2&&b==2)
{countc++;
printf("you loose    computer's point=+1\n");}
else
{
if(a==2&&b!=2)
{if(b==1)
printf("tie\n");
if(b==0)
{county++;
printf("\ayou win    your's point=+1\n");}}}
//a==3
if(a==3&&b==0)
{printf("you loose    computer's point=+1\n");countc++;}
else
{
if(a==3&&b!=0)
{if(b==2)
printf("tie\n");
if(b==1)
{county++;printf("\ayou win    your's point=+1\n");
}}}}
printf("\033[0;31m");
printf(" NOW TIME TO CALCULATE FINAL SCORE::\n\nYour total point=%d\nComputer's total Point=%d\n\n",county,countc);
if(countc>county)
printf("YOU LOOSE    BETTER LUCK NEXT TIME\n");
else
printf("\a\aYOU WIN   CONGRATULATIONS\n");}
printf("\033[0;34m");
printf("\n\n press 1 to play again::");
int g;scanf("%d",&g);
