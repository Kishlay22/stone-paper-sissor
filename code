start:
{
int a;srand(time(NULL));int county=0,countc=0,i;
for(i=1;i<=5;i++)
{printf("\033[0;32m");
printf("\n\nEnter your choice::\n1.Stone\n2.Paper\n3.Sissor\n\n");
printf("Your choise is:: ");
